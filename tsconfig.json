{
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "es2017",
    "lib": ["es2019"],
    "declaration": true,
    "declarationDir": "typings",
    "sourceMap": true,
    "removeComments": false,
    "outDir": "dist"
  },
  "include": [
    "./src/"
  ],
  "exclude": [
    "**/*.test.ts",
    "**/__mocks__/**"
  ]
}
